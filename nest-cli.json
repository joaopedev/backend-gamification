{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "mail/templates/**/*.hbs",

        "outDir": "/src"
      }
    ],
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json"
  },
  "builder": {
    "type": "tsc",
    "options": {
      "watch": true
    }
  }
}
